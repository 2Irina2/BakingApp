<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_widget_background"
    android:padding="@dimen/widget_padding"
    android:id="@+id/recipe_widget_rl">

    <TextView
        android:id="@+id/recipe_widget_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/widget_title_margin"
        android:contentDescription="@string/recipe_widget_title"
        android:text="@string/recipe_widget_title"
        android:textColor="@color/color_widget_title"
        android:textSize="@dimen/widget_title_text_size"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/recipe_widget_ingredients_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_widget_title_tv"
        android:layout_marginLeft="@dimen/widget_ingredients_margin_left"
        android:layout_marginRight="@dimen/widget_ingredients_margin_right"
        android:textSize="@dimen/widget_ingredients_text_size"
        android:textColor="@color/color_widget_ingredients"
        android:layout_marginStart="@dimen/widget_ingredients_margin_left"
        android:layout_marginEnd="@dimen/widget_ingredients_margin_right" />

</RelativeLayout>